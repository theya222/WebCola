{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "remove",
    "declaration": false,
    "noEmit": true,
    "stripInternal": true,
    "sourceMap": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  },
  "typedocOptions": {
    "module": "commonjs",
    "target": "es5",
    "out": "website/doc/",
    "name": "WebCola",
    "theme": "minimal"
  }
}
